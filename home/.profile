. "$HOME/.cargo/env"

export NVIM_CONFIG_MODE='LITE'

export EDITOR='nvim'
export SUDO_EDITOR='env NVIM_MODE="BASIC" nvim'
export VISUAL='nvim'

alias ls='ls --color=always'
alias ll='ls -lh --color=always'
alias la='ls -lah --color=always'
alias cls='clear'

alias lsbin='compgen -c'

alias nv='nvim'
